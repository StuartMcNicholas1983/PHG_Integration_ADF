{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "phg-eval-datafactory"
		},
		"TRG_S_8PM_Daily_properties_PL_Control_parameters_PipelineName": {
			"type": "string",
			"defaultValue": "OH_D365_DataSync"
		},
		"TRG_S_8PM_Daily_properties_PL_Control_parameters_SequenceList": {
			"type": "string",
			"defaultValue": "[[D]"
		},
		"trigger1_properties_PL_Control_parameters_PipelineName": {
			"type": "string",
			"defaultValue": "OH_D365_DataSync"
		},
		"trigger1_properties_PL_Control_parameters_SequenceList": {
			"type": "string",
			"defaultValue": "[[L],[R],[C],[T]"
		},
		"trigger1_properties_PL_Control_parameters_LoadType": {
			"type": "string",
			"defaultValue": "Full"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/TRG_S_8PM_Daily')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Stopped",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "PL_Control",
							"type": "PipelineReference"
						},
						"parameters": {
							"PipelineName": "[parameters('TRG_S_8PM_Daily_properties_PL_Control_parameters_PipelineName')]",
							"SequenceList": "[parameters('TRG_S_8PM_Daily_properties_PL_Control_parameters_SequenceList')]"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Day",
						"interval": 1,
						"startTime": "2023-03-29T10:41:00",
						"timeZone": "GMT Standard Time",
						"schedule": {
							"minutes": [
								0
							],
							"hours": [
								20
							]
						}
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/trigger1')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Stopped",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "PL_Control",
							"type": "PipelineReference"
						},
						"parameters": {
							"PipelineName": "[parameters('trigger1_properties_PL_Control_parameters_PipelineName')]",
							"SequenceList": "[parameters('trigger1_properties_PL_Control_parameters_SequenceList')]",
							"LoadType": "[parameters('trigger1_properties_PL_Control_parameters_LoadType')]"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Day",
						"interval": 1,
						"startTime": "2023-05-26T08:00:00",
